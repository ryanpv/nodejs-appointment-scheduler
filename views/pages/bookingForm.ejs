<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %>
</head>
<body class="container">
  <header>
    <%- include('../partials/header.ejs') %>
  </header>

  <h1>Booking Form</h1>

  <form action="/add-appointment" method="POST">
    <div class="form-group">
      <label for="formControlEmailInput">Email address</label>
      <input required name="clientEmail" type="email" class="form-control" id="formControlEmailInput" placeholder="name@example.com">
    </div>
    <div class="form-group">
      <label for="clientNameInput">Name</label>
      <input required name="clientName" type="text" class="form-control" id="clientNameInput" placeholder="Your Name">
    </div>
    <div class="form-group">
      <label for="phoneInput">Phone Number</label>
      <input required name="clientPhone" type="tel" class="form-control" id="phoneInput"  pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="format: XXX-XXX-XXXX">
    </div>
    <div class="form-group">
      <label for="dateInput">Date</label>
      <input required name="date" type="date" class="form-control" id="dateInput">
    </div>
    <div class="form-group">
      <label for="timeInput">Time</label>
      <input required name="time" type="time" value="10:00" class="form-control" id="timeInput" min="10:00" max="19:00" step="30">
    </div>
    <div class="form-group">
      <label for="formControlSelect">Select service</label>
      <select required name="service" class="form-control" id="formControlSelect">
        <option>Service1</option>
        <option>Service2</option>
        <option>Service3</option>
        <option>Service4</option>
        <option>Service5</option>
      </select>
    </div>

    <div class="form-group">
      <label for="formControlTextInput">Provide any specific details</label>
      <textarea name="details" class="form-control" id="formControlTextInput" rows="3" maxlength="500"></textarea>
    </div> 
    <br></br>

    <input type="submit" value="Submit">
    <input type="reset">
  </form>
  
</body>
</html>